<h2>管理者画面</h2>
<p><%= notice %></p>
<button type="button" class = "btn"><%= link_to 'ユーザ新規登録',new_admin_user_path %></button>
  <div class="task_table">
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">名前</th>
        <th scope="col">Emailアドレス</th>
        <th scope="col">管理者権限</th>
        <th scope="col">作成日</th>
        <th scope="col">アップデート日</th>
        <th scope="col">タスク数</th>
      </tr>
    </thead>
    <tbody class="admin_row">
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %> </td>
          <td><%= user.email %></td>
          <td><%= "有" if user.admin? %></td>
          <td><%= user.created_at.strftime("%Y-%m-%d%H:%M") %></td>
          <td><%= user.updated_at.strftime("%Y-%m-%d%H:%M") %></td>
          <td><%= user.tasks.count %> </td>
          <td></td>
          <td><%= link_to '詳細', admin_user_path(user.id)%></td>
          <td><%= link_to '編集', edit_admin_user_path(user.id)%></td>
          <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate (@users) %>
